@model WebApp.Pages.Table1.IndexModel
@{
}

@section Styles{
    <style>
        .confirmTableHeader {
            --bs-table-bg: #fdd0d0;
            font-weight: 600;
        }

        tr.custom--success td {
            background-color: #FF0000;
        }
    </style>
}
<h1>Home</h1>

<table id="table"
       data-click-to-select="true"
       data-pagination="true"
       data-id-field="UserID"
@* ページ件数pageSizeとあわせる *@
       data-page-list="[5]">
</table>

@section Scripts {

    <script type="text/javascript" charset="utf-8">

        var jsonObj = @Html.Raw(Json.Serialize(@Model.DepositList));

        $('#table').bootstrapTable({
            columns: [{
                field: 'RegistrationDate',
                title: '登録日'
            }, {
                field: 'UserID',
                title: 'ユーザーID'
            }, {
                field: 'Name',
                title: '氏名'
            }, {
                field: 'Gender',
                title: '性別'
            }, {
                field: 'Age',
                title: '年齢'
            }, {
                field: 'Birthday',
                title: '生年月日'
            }],
            pageSize: 5,
            clickToSelect: true, // 行の選択を有効にする
            data: jsonObj
        }).on('click-row.bs.table', function (e, row, $element) {
            console.log('click-row.bs.table!!', row.UserID);
            $('.custom--success').removeClass('custom--success');
            $($element).addClass('custom--success');
        });

    </script>
}