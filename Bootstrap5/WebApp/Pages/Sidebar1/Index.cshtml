@page
@model WebApp.Pages.Sidebar1.IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-table/dist/bootstrap-table.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto bg-light">
                <div class="row">
                    <!--クリック領域の右寄せにこれ重要-->
                    <div style="text-align: right;">
                        <!-- toggler -->
                        <a onclick="((aElem) => {
                                var spanElems = document.querySelectorAll('ul.nav li.nav-item a.nav-link span');
                                spanElems.forEach(function(spanElem) {
                                    var hasDNoneClass=spanElem.classList.contains('d-none');
                                    if (hasDNoneClass) {
                                        spanElem.classList.remove('d-none');
                                    } else {
                                        spanElem.classList.add('d-none');
                                    }
                                });
                                var iElem = aElem.querySelector('i');

                                if (iElem.classList.contains('bi-arrows-angle-contract')) {
                                    iElem.classList.remove('bi-arrows-angle-contract');
                                    iElem.classList.add('bi-arrows-angle-expand');
                                } else if (iElem.classList.contains('bi-arrows-angle-expand')) {
                                    iElem.classList.remove('bi-arrows-angle-expand');
                                    iElem.classList.add('bi-arrows-angle-contract');
                                }
                            })(this)">
                            <i class="fs-4 bi bi-arrows-angle-contract"></i>
                        </a>
                    </div>
                </div>
                <div class="d-flex flex-column align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a class="nav-link align-left px-0" href="">
                                <i class="fs-4 bi-table"></i>
                                <span style="white-space: nowrap;">文字文字文字文字文字</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link align-left px-0" href="">
                                <i class="fs-4 bi-table"></i>
                                <span style="white-space: nowrap;">文字</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col py-3">
                <div class="container">
                    <main role="main" class="pb-3">
                        <div>コンテンツ</div>
                    </main>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap-table/dist/bootstrap-table.min.js"></script>
    <script src="~/lib/bootstrap-table/dist/locale/bootstrap-table-ja-JP.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>